{
  "manifest_version": 3,
  "name": "Text Display Extension",
  "version": "1.0",
  "description": "選択したテキストを辞書で検索する拡張機能",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["gemini-api.js", "content.js"],
      "css": ["styles.css"]
    }
  ]
}